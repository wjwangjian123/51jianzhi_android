<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F7F8FA"
    tools:context=".mvp.ui.activity.BusinessActivity">
    <TextView
        android:id="@+id/tv_contract"
        android:layout_width="245dp"
        android:layout_height="138dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:paddingTop="49dp"
        android:textColor="@color/color_6D7485"
        android:textSize="@dimen/font_15"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_business_bg"/>
    <ImageView
        android:id="@+id/iv_business"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:src="@drawable/icon_business"
        android:layout_below="@+id/tv_contract"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>