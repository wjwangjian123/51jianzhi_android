<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f5"
    tools:context=".mvp.ui.activity.IntegralListActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/rl_con"
        android:background="@drawable/icon_jifen_top"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_44"
            android:layout_centerVertical="true"
            android:paddingHorizontal="19dp"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_white_back"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:src="@drawable/icon_jifen_bottom"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_zhidou"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:text="我的职豆："
            android:textSize="@dimen/font_24"
            android:textColor="@color/color_ffffff"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="@dimen/dimen_10"/>
        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:textSize="@dimen/font_24"
            android:textColor="@color/color_ffffff"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_zhidou"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignTop="@+id/tv_zhidou"
            android:layout_marginRight="27dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/tv_zhidou"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:layout_marginBottom="26dp"
            android:paddingTop="6dp"
            android:paddingLeft="@dimen/dimen_20"
            android:paddingRight="@dimen/dimen_20"
            android:paddingBottom="6dp"
            android:background="@drawable/white_circular_rectangle_shape">
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/smartRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                android:layout_marginTop="14dp">
                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/lv_integral_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="@color/transparency"
                    android:overScrollMode="never"
                    android:divider="#E7ECF5"
                    android:dividerHeight="0.5dp"
                    android:scrollbars="none"/>
                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>