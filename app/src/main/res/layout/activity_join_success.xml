<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context=".mvp.ui.activity.JoinSuccessActivity">
    <RelativeLayout
        android:id="@+id/join_rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44">
        <ImageView
            android:id="@+id/join_iv_return"
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_44"
            android:layout_centerVertical="true"
            android:paddingHorizontal="19dp"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_arrow_return"/>
        <TextView
            android:id="@+id/join_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名成功"
            android:textColor="@color/color_051b28"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <com.part.jianzhiyi.corecommon.ui.ObservableScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/join_linear_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="@drawable/shape_bg_purple10"
                    android:layout_marginHorizontal="28dp"
                    android:paddingTop="21dp"
                    android:paddingLeft="@dimen/dimen_18"
                    android:paddingRight="@dimen/dimen_18"
                    android:paddingBottom="13dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/join_tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/color_ffffff"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="9dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/join_iv_contact"
                            android:layout_width="@dimen/dimen_15"
                            android:layout_height="@dimen/dimen_15"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/join_tv_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#D9DBFF"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/join_tv_copy"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:gravity="center"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/color_ffffff"
                        android:background="@drawable/shape_resume_btn"
                        android:layout_marginTop="11dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@drawable/icon_wallet_bg_bottom"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/dimen_30"/>
                <TextView
                    android:id="@+id/join_tv_tip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"
                    android:textSize="11sp"
                    android:textColor="@color/color_292E3B"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/join_linear_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="@drawable/shape_bg_purple10"
                    android:layout_marginHorizontal="28dp"
                    android:paddingTop="21dp"
                    android:paddingLeft="@dimen/dimen_18"
                    android:paddingRight="@dimen/dimen_18"
                    android:paddingBottom="13dp">
                    <TextView
                        android:id="@+id/join_tv_tip3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/color_ffffff"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/join_tv_tip4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主动联系商家，更有机会被录用哦"
                        android:textSize="13sp"
                        android:textColor="#D9DBFF"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/dimen_3"/>
                    <TextView
                        android:id="@+id/join_tv_contact2"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:gravity="center"
                        android:text="联系商家"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/color_ffffff"
                        android:background="@drawable/shape_resume_btn"
                        android:layout_marginTop="9dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@drawable/icon_wallet_bg_bottom"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/dimen_30"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/express_rl_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginHorizontal="37dp"
                tools:ignore="HardcodedText"
                android:visibility="gone">
                <FrameLayout
                    android:id="@+id/express_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/iv_ad_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad_close"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10"
                android:background="@color/color_F7F8FA"
                android:layout_marginTop="27dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rl_Optimization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginHorizontal="21dp">
                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="@dimen/dimen_66"
                    android:layout_height="5dp"
                    android:src="@drawable/icon_join_tab"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv_Optimization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报名此职位的人也报名了"
                    android:textColor="@color/color_292E3B"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
                android:id="@+id/lv_Optimization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#E7ECF5"
                android:dividerHeight="0.5dp"
                android:listSelector="@color/transparency"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:paddingBottom="@dimen/dimen_30"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="21dp"/>
        </LinearLayout>
    </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>
</LinearLayout>