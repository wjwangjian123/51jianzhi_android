<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.JoinSuccessActivity">
    <RelativeLayout
        android:id="@+id/join_rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44">
        <ImageView
            android:id="@+id/join_iv_return"
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_44"
            android:layout_centerVertical="true"
            android:paddingHorizontal="19dp"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_arrow_return"/>
        <TextView
            android:id="@+id/join_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名成功"
            android:textColor="@color/color_051b28"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/join_linear_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/join_tv_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_18"
            android:gravity="center"
            android:text="请主动联系商家咨询相关工作内容，完成录取流程，否则以放鸽子处理，影响你的信誉"
            android:layout_marginHorizontal="35dp"
            android:lineSpacingExtra="@dimen/dimen_3"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/join_iv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/join_tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="14dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/join_iv_copy"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/join_tv_copy"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/color_ffffff"
                android:textStyle="bold"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/join_tv_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:gravity="center"
            android:textSize="9sp"
            android:textColor="@color/color_707070"
            android:layout_marginTop="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/join_linear_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/join_tv_tip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textColor="@color/color_4A4A4A"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_18"/>
        <TextView
            android:id="@+id/join_tv_tip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请主动联系商家咨询相关工作内容，完成录取流程，否则以放鸽子处理，影响你的信誉"
            android:textSize="13sp"
            android:textColor="@color/color_999999"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:layout_marginHorizontal="35dp"
            android:lineSpacingExtra="@dimen/dimen_3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="14dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/join_iv_contact2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/join_tv_contact2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="联系商家"
                android:textSize="17sp"
                android:textColor="@color/color_ffffff"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/express_rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginHorizontal="35dp"
        tools:ignore="HardcodedText">
        <FrameLayout
            android:id="@+id/express_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_ad_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ad_close"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:background="@color/color_EEEEEE"
        android:layout_marginTop="23dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_Optimization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="16dp">
        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="34dp"
            android:layout_height="9dp"
            android:src="@drawable/sy_tab"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_Optimization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名此职位的人也报名了"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.part.jianzhiyi.corecommon.ui.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginTop="19dp">
        <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
            android:id="@+id/lv_Optimization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:paddingRight="22dp"
            android:divider="@color/transparency"
            android:dividerHeight="@dimen/line_height"
            android:listSelector="@color/transparency"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:paddingBottom="@dimen/dimen_30"/>
    </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>
</LinearLayout>