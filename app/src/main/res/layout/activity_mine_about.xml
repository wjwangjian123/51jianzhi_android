<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/color_ffffff"
    tools:context=".mvp.ui.activity.MineAboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:paddingBottom="27dp">
        <ImageView
            android:id="@+id/mine_about_img"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:src="@drawable/icon_logo" />
        <TextView
            android:id="@+id/mine_about_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/mine_about_img"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_16" />
        <TextView
            android:id="@+id/mine_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_999999"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mine_about_name"
            android:layout_marginTop="@dimen/dimen_15"/>
        <View
            android:id="@+id/mine_about_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="#E7ECF5"
            android:layout_below="@+id/mine_about_version"
            android:layout_marginTop="31dp"
            android:layout_marginHorizontal="25dp"/>
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_about_view"
            android:layout_marginHorizontal="42dp"
            android:layout_marginTop="16dp"
            android:scrollbars="none">
        </WebView>
    </RelativeLayout>
</ScrollView>