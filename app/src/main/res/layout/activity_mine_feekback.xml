<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F7F7F7"
    tools:context=".mvp.ui.activity.MineFeekbackActivity">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="11dp"
        android:textColor="@color/color_333333"
        android:text="问题与意见"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_suggest"
        android:maxLines="4"
        android:minLines="4"
        android:gravity="left|top"
        android:paddingLeft="17dp"
        android:paddingRight="25dp"
        android:paddingVertical="@dimen/dimen_15"
        android:background="@color/color_ffffff"
        android:textSize="@dimen/font_15"
        android:hint="请填写15个字以上的问题描述以便我们提供更好的兼职服务"
        android:textColorHint="@color/color_979FA5"
        android:lineSpacingExtra="@dimen/dimen_3"
        android:textColor="@color/color_4A4A4A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="11dp"
        android:text="联系方式（邮箱）"
        android:textSize="13sp"
        android:textColor="@color/color_333333"/>

    <EditText
        android:id="@+id/et_phone"
        android:gravity="left|top"
        android:paddingLeft="17dp"
        android:paddingRight="25dp"
        android:paddingVertical="@dimen/dimen_15"
        android:hint="请填写您的邮箱，以便于我们与您联系"
        android:textColorHint="@color/color_979FA5"
        android:lineSpacingExtra="@dimen/dimen_3"
        android:textColor="@color/color_4A4A4A"
        android:background="@color/color_ffffff"
        android:textSize="@dimen/font_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/shape_resume_btn"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="确认提交"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_15" />
</LinearLayout>