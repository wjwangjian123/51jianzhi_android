<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.MineSettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:paddingLeft="23dp"
        android:paddingRight="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否开启消息推送"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_6D7485"
            android:layout_centerVertical="true"/>
        <Switch
            android:id="@+id/set_switch"
            android:layout_width="53dp"
            android:layout_height="22dp"
            android:padding="@dimen/dimen_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:showText="false"
            android:thumb="@drawable/switch_custom_thumb_on"
            android:track="@drawable/switch_custom_track_selector" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/color_F7F8FA"/>
    <RelativeLayout
        android:id="@+id/set_rl_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:paddingLeft="23dp"
        android:paddingRight="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_6D7485"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="@dimen/dimen_5"
            android:layout_height="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/iv_right_end" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="22dp"
        android:background="@color/color_F7F8FA"/>
    <RelativeLayout
        android:id="@+id/set_rl_privacy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:paddingLeft="23dp"
        android:paddingRight="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_6D7485"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="@dimen/dimen_5"
            android:layout_height="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/iv_right_end" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="22dp"
        android:background="@color/color_F7F8FA"/>
    <RelativeLayout
        android:id="@+id/set_rl_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:paddingLeft="23dp"
        android:paddingRight="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测新版本"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_6D7485"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_6D7485"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"/>
        <ImageView
            android:layout_width="@dimen/dimen_5"
            android:layout_height="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/iv_right_end" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/color_F7F8FA"/>
    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#FE9941"
        android:textSize="@dimen/font_14" />
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/color_F7F8FA"/>
    <TextView
        android:id="@+id/tv_cancellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销账号"
        android:textSize="@dimen/font_14"
        android:textColor="@color/color_6D7485"
        android:padding="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>
</LinearLayout>