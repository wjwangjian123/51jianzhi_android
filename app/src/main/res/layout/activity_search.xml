<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context=".mvp.ui.activity.SearchActivity">
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_grey_bg"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/dimen_10"
                android:src="@drawable/icon_search2" />
            <com.part.jianzhiyi.corecommon.ui.InputFilteEditText
                android:id="@+id/ifet_search"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@null"
                android:hint="大家都在搜的兼职"
                android:textColorHint="@color/color_999999"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/font_12"
                android:paddingRight="@dimen/dimen_10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="取消"
            android:textSize="13sp"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:paddingLeft="11dp"
            android:paddingRight="14dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F7F8FA"/>
    <com.part.jianzhiyi.corecommon.ui.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10"
            android:background="@color/color_ffffff">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="@dimen/dimen_15">
                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:src="@drawable/icon_join_tab"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_search"
                    app:layout_constraintRight_toRightOf="@+id/tv_search"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_search"/>
                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门搜索"
                    android:textColor="@color/color_292E3B"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tfl_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="16dp"
                app:itemSpacing="13dp"
                app:lineSpacing="@dimen/dimen_12"
                app:max_select="1" />
            <LinearLayout
                android:id="@+id/ll_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/icon_search_hot_bg"
                android:paddingLeft="29dp"
                android:paddingRight="25dp"
                android:paddingTop="65dp"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_title_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_292E3B"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/tv_price1_one"/>
                    <TextView
                        android:id="@+id/tv_price1_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_theme"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_16"
                        android:layout_toLeftOf="@+id/tv_price2_one"/>
                    <TextView
                        android:id="@+id/tv_price2_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_theme"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/tv_price1_one"/>
                    <TextView
                        android:id="@+id/tv_settlement_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="@dimen/dimen_2"
                        android:textSize="9sp"
                        android:textColor="@color/color_717785"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:background="@drawable/shape_text_grey"
                        android:layout_below="@+id/tv_title_one"
                        android:layout_marginTop="@dimen/dimen_5"/>
                    <TextView
                        android:id="@+id/tv_time_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="@dimen/dimen_2"
                        android:textSize="9sp"
                        android:textColor="@color/color_717785"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:background="@drawable/shape_text_grey"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:layout_alignTop="@+id/tv_settlement_one"
                        android:layout_toRightOf="@+id/tv_settlement_one"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E7ECF5"
                    android:layout_marginTop="@dimen/dimen_10"/>
                <RelativeLayout
                    android:id="@+id/rl_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10">
                    <TextView
                        android:id="@+id/tv_title_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_292E3B"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/tv_price1_two"/>
                    <TextView
                        android:id="@+id/tv_price1_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_theme"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_16"
                        android:layout_toLeftOf="@+id/tv_price2_two"/>
                    <TextView
                        android:id="@+id/tv_price2_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_theme"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/tv_price1_two"/>
                    <TextView
                        android:id="@+id/tv_settlement_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="@dimen/dimen_2"
                        android:textSize="9sp"
                        android:textColor="@color/color_717785"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:background="@drawable/shape_text_grey"
                        android:layout_below="@+id/tv_title_two"
                        android:layout_marginTop="@dimen/dimen_5"/>
                    <TextView
                        android:id="@+id/tv_time_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="@dimen/dimen_2"
                        android:textSize="9sp"
                        android:textColor="@color/color_717785"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:background="@drawable/shape_text_grey"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:layout_alignTop="@+id/tv_settlement_two"
                        android:layout_toRightOf="@+id/tv_settlement_two"/>
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search_empty"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="33dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_search_com"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:text="搜索推荐"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_545454"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_24"
                android:paddingLeft="16dp"
                android:background="@color/color_F5F5F5"/>
            <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
                android:id="@+id/lv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingRight="22dp"
                android:listSelector="@color/transparency"
                android:overScrollMode="never"
                android:divider="#E7ECF5"
                android:dividerHeight="0.5dp"
                android:scrollbars="none"/>
        </LinearLayout>
    </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>
</LinearLayout>