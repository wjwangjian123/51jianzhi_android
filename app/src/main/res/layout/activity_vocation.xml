<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context=".mvp.ui.activity.VocationActivity">
    <ImageView
        android:id="@+id/iv_vaction_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:src="@drawable/ic_vocation_bg_title" />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_joined"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="14dp"
            android:gravity="center"
            android:text="立即报名"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_15"
            android:textStyle="bold"
            android:background="@drawable/shape_dialog_agree"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/vo_rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44">
        <ImageView
            android:id="@+id/vo_iv_return"
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_44"
            android:layout_centerVertical="true"
            android:paddingHorizontal="19dp"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_white_back"/>
<!--        <TextView-->
<!--            android:id="@+id/vo_tv_title"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="兼职详情"-->
<!--            android:textColor="@color/color_051b28"-->
<!--            android:textSize="@dimen/font_18"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_centerInParent="true"/>-->
<!--        <ImageView-->
<!--            android:id="@+id/iv_favourite"-->
<!--            android:layout_width="@dimen/dimen_44"-->
<!--            android:layout_height="@dimen/dimen_44"-->
<!--            android:padding="14dp"-->
<!--            android:src="@drawable/selector_favourite_selected"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_marginRight="@dimen/dimen_5"/>-->
    </RelativeLayout>
    <com.part.jianzhiyi.corecommon.ui.ObservableScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vo_rl_title"
        android:layout_above="@id/iv_vaction_bg"
        android:background="@color/color_ffffff"
        android:overScrollMode="never"
        android:paddingTop="@dimen/dimen_10"
        android:scrollbars="none"
        tools:context="com.part.lejob.mvp.ui.activity.VocationActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_10">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vo_con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp">
                <TextView
                    android:id="@+id/tv_job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/dimen_80"/>
                <include
                    layout="@layout/include_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@+id/tv_job_title"
                    android:layout_marginTop="@dimen/dimen_15">
                    <ImageView
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="@dimen/dimen_10"
                        android:src="@drawable/icon_vo_num"/>
                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_3"/>
                    <ImageView
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="9dp"
                        android:src="@drawable/icon_vo_intro"
                        android:layout_marginLeft="@dimen/dimen_10"/>
                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_3"/>
                    <ImageView
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="9dp"
                        android:src="@drawable/icon_vo_dizhi"
                        android:layout_marginLeft="@dimen/dimen_10"/>
                    <TextView
                        android:id="@+id/tv_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_3"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:id="@+id/rl_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_18"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/icon_vocation_bg_one">
                <ImageView
                    android:id="@+id/vo_iv_com"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/icon_vo_company"
                    android:layout_marginTop="17dp"/>
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/vo_iv_com"
                    android:layout_alignTop="@+id/vo_iv_com"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/tv_renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_company"
                    android:layout_toRightOf="@+id/vo_iv_com"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:text="已认证"
                    android:textColor="@color/color_37B58B"
                    android:textSize="11sp"
                    android:drawableLeft="@drawable/icon_vo_renzheng"
                    android:drawablePadding="@dimen/dimen_5"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="13dp"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:background="@drawable/icon_vocation_bg_two">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="@color/color_37B58B"
                    android:textSize="@dimen/font_14"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:id="@+id/ll_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text1"
                    android:layout_toLeftOf="@+id/iv_copy"
                    android:layout_marginLeft="@dimen/dimen_5">
                    <ImageView
                        android:id="@+id/iv_contract"
                        android:layout_width="@dimen/dimen_15"
                        android:layout_height="@dimen/dimen_15" />
                    <TextView
                        android:id="@+id/tv_contract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_10"
                        android:layout_marginLeft="@dimen/dimen_3"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/iv_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/shape_dialog_agree"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_10">
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作内容"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold" />
                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:scrollbars="none">
                </WebView>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_20"
                android:background="@drawable/ic_vaction_bottom" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vo_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_15">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="9dp"
                    android:src="@drawable/sy_tab"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作流程"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:layout_width="314dp"
                android:layout_height="78dp"
                android:src="@drawable/icon_vo_work"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"/>
            <RelativeLayout
                android:id="@+id/express_rl_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginHorizontal="@dimen/dimen_15"
                tools:ignore="HardcodedText">
                <FrameLayout
                    android:id="@+id/express_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/iv_ad_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad_close"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rl_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="@dimen/dimen_15">
                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="34dp"
                    android:layout_height="9dp"
                    android:src="@drawable/sy_tab"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猜你喜欢"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
                android:id="@+id/lv_love"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_5"
                android:divider="@color/color_D8D8D8"
                android:dividerHeight="@dimen/line_height"
                android:listSelector="@color/transparency"
                android:overScrollMode="never" />
        </LinearLayout>
    </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>
    <ImageView
        android:id="@+id/img_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_join_tip"
        android:layout_above="@+id/ll_bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="-15dp"
        android:visibility="gone"/>
</RelativeLayout>