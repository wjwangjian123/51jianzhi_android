<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context=".mvp.ui.activity.VocationActivity">
    <ImageView
        android:id="@+id/iv_vaction_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:src="@drawable/ic_vocation_bg_title" />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_joined"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="14dp"
            android:gravity="center"
            android:text="立即报名"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_15"
            android:textStyle="bold"
            android:background="@drawable/shape_dialog_agree"/>
    </LinearLayout>
    <com.part.jianzhiyi.corecommon.ui.ObservableScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/iv_vaction_bg"
        android:background="@color/color_ffffff"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:context="com.part.lejob.mvp.ui.activity.VocationActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10">
            <RelativeLayout
                android:id="@+id/vo_con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_vocation_bg"
                android:paddingBottom="@dimen/dimen_15">
                <ImageView
                    android:id="@+id/vo_iv_return"
                    android:layout_width="@dimen/dimen_44"
                    android:layout_height="@dimen/dimen_44"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="16dp"
                    android:src="@drawable/ic_white_back"/>
                <TextView
                    android:id="@+id/tv_job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FEFEFE"
                    android:textSize="@dimen/font_20"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_toLeftOf="@+id/iv_favourite"
                    android:layout_below="@+id/vo_iv_return"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="17dp"/>
                <ImageView
                    android:id="@+id/iv_favourite"
                    android:layout_width="@dimen/dimen_44"
                    android:layout_height="@dimen/dimen_44"
                    android:padding="14dp"
                    android:src="@drawable/selector_favourite_selected"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_below="@+id/vo_iv_return"
                    android:layout_marginTop="@dimen/dimen_2"/>
                <LinearLayout
                    android:id="@+id/linear_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/tv_job_title"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginHorizontal="17dp">
                    <TextView
                        android:id="@+id/tv_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_ffffff"/>
                    <View
                        android:layout_width="@dimen/dimen_1"
                        android:layout_height="7dp"
                        android:background="@color/color_ffffff"
                        android:layout_marginLeft="@dimen/dimen_8"/>
                    <TextView
                        android:id="@+id/tv_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_ffffff"
                        android:layout_marginLeft="@dimen/dimen_8"/>
                    <View
                        android:id="@+id/vo_view"
                        android:layout_width="@dimen/dimen_1"
                        android:layout_height="7dp"
                        android:background="@color/color_ffffff"
                        android:layout_marginLeft="@dimen/dimen_8"/>
                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_ffffff"
                        android:layout_marginLeft="@dimen/dimen_8"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_below="@+id/linear_info"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginHorizontal="17dp">
                    <TextView
                        android:id="@+id/tv_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@color/color_FFCC00"
                        android:textStyle="bold"
                        android:textSize="23sp"/>
                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:textColor="@color/color_FFCC00"
                        android:textSize="11sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linear_price"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginHorizontal="17dp">
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="@dimen/dimen_12"
                        android:src="@drawable/icon_vo_num"
                        android:layout_gravity="top"/>
                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_ffffff"
                        android:layout_marginLeft="@dimen/dimen_2"
                        android:layout_gravity="top"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="@dimen/dimen_12"
                        android:src="@drawable/icon_vo_intro"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_gravity="top"/>
                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_ffffff"
                        android:layout_marginLeft="@dimen/dimen_2"
                        android:layout_gravity="top"/>
                    <ImageView
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="@dimen/dimen_12"
                        android:src="@drawable/icon_vo_dizhi"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_gravity="top"/>
                    <TextView
                        android:id="@+id/tv_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_ffffff"
                        android:layout_marginLeft="@dimen/dimen_2"
                        android:layout_gravity="top"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_18"
                android:paddingTop="23dp"
                android:paddingBottom="@dimen/dimen_18"
                android:background="@color/color_ffffff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sy_tab"
                    android:layout_alignBottom="@+id/vo_tv_text"
                    android:layout_alignRight="@+id/vo_tv_text"/>
                <TextView
                    android:id="@+id/vo_tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司信息"
                    android:textSize="@dimen/font_18"
                    android:textColor="@color/color_333333"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vo_tv_text"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tv_renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_company"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="已认证"
                    android:textColor="@color/color_FDC503"
                    android:textSize="11sp"
                    android:drawableLeft="@drawable/icon_vo_renzheng"
                    android:drawablePadding="@dimen/dimen_4"/>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_12"
                    android:layout_below="@+id/tv_renzheng"
                    android:layout_marginTop="13dp"/>
                <LinearLayout
                    android:id="@+id/ll_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/text1"
                    android:layout_toLeftOf="@+id/iv_copy"
                    android:layout_marginHorizontal="@dimen/dimen_5"
                    android:layout_below="@+id/tv_renzheng"
                    android:layout_alignTop="@+id/text1">
                    <ImageView
                        android:id="@+id/iv_contract"
                        android:layout_width="@dimen/dimen_15"
                        android:layout_height="@dimen/dimen_15" />
                    <TextView
                        android:id="@+id/tv_contract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_10"
                        android:layout_marginLeft="@dimen/dimen_3"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/iv_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/shape_dialog_agree"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_12"
                    android:layout_below="@+id/tv_renzheng"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_EEEEEE"/>
            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_18"
                android:layout_marginTop="21dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sy_tab"
                    android:layout_alignBottom="@+id/tv_content"
                    android:layout_alignRight="@+id/tv_content"/>
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作内容"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold" />
                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:scrollbars="none">
                </WebView>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_EEEEEE"
                android:layout_marginTop="@dimen/dimen_10"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vo_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginHorizontal="@dimen/dimen_18">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="9dp"
                    android:src="@drawable/sy_tab"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作流程"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:layout_width="314dp"
                android:layout_height="78dp"
                android:src="@drawable/icon_vo_work"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"/>
            <RelativeLayout
                android:id="@+id/express_rl_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginHorizontal="@dimen/dimen_18"
                tools:ignore="HardcodedText"
                android:visibility="gone">
                <FrameLayout
                    android:id="@+id/express_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/iv_ad_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad_close"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_EEEEEE"
                android:layout_marginTop="21dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rl_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginHorizontal="@dimen/dimen_18">
                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="34dp"
                    android:layout_height="9dp"
                    android:src="@drawable/sy_tab"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猜你喜欢"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
                android:id="@+id/lv_love"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_5"
                android:divider="@color/transparency"
                android:dividerHeight="@dimen/line_height"
                android:listSelector="@color/transparency"
                android:overScrollMode="never" />
        </LinearLayout>
    </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>
    <ImageView
        android:id="@+id/img_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_join_tip"
        android:layout_above="@+id/ll_bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="-15dp"
        android:visibility="gone"/>
</RelativeLayout>