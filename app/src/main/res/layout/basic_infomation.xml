<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_basic_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/icon_task_bg_basic"
    android:paddingTop="@dimen/dimen_24"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingBottom="@dimen/dimen_12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@color/color_E9525F"/>
        <TextView
            android:id="@+id/tv_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用宝搜索任务"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_15"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginLeft="14dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignLeft="@+id/tv_task_name"
            android:layout_below="@+id/tv_task_name"
            android:layout_marginTop="@dimen/dimen_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_E9525F"
                android:textStyle="bold"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/tv_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5"
                android:textColor="@color/color_E9525F"
                android:textSize="@dimen/font_24"
                android:gravity="bottom"
                android:includeFontPadding="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/font_12"
                android:textColor="#A0A5B6"
                android:layout_marginLeft="@dimen/dimen_2"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_18"
        android:background="#F9F9FB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始任务"
                android:textSize="@dimen/font_12"
                android:textColor="#767AFD"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STEP.01"
                android:textSize="@dimen/font_8"
                android:textColor="#DBDBE9"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dimen_8"
            android:layout_height="7dp"
            android:src="@drawable/icon_task_jiantou"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交截图"
                android:textSize="@dimen/font_12"
                android:textColor="#767AFD"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STEP.02"
                android:textSize="@dimen/font_8"
                android:textColor="#DBDBE9"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dimen_8"
            android:layout_height="7dp"
            android:src="@drawable/icon_task_jiantou"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待审核"
                android:textSize="@dimen/font_12"
                android:textColor="#767AFD"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STEP.03"
                android:textSize="@dimen/font_8"
                android:textColor="#DBDBE9"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dimen_8"
            android:layout_height="7dp"
            android:src="@drawable/icon_task_jiantou"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奖励发放"
                android:textSize="@dimen/font_12"
                android:textColor="#767AFD"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STEP.04"
                android:textSize="@dimen/font_8"
                android:textColor="#DBDBE9"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>