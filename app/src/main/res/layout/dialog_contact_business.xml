<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_join_up_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_20"
    android:paddingBottom="@dimen/dimen_24">
    <TextView
        android:id="@+id/contact_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系商家"
        android:textSize="@dimen/font_18"
        android:textColor="@color/color_333333"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_1"/>
    <ImageView
        android:id="@+id/contact_iv_cancel"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:padding="@dimen/dimen_10"
        android:src="@drawable/icon_cancel"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/contact_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EEEEEE"
        android:layout_below="@+id/contact_tv_text"
        android:layout_marginTop="@dimen/dimen_20"/>
    <LinearLayout
        android:id="@+id/contact_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/contact_view"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/icon_tip_bg"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已报名多个职位,请及时联系商家,获取更多收益"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_FF5155"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_5"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contact_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_linear"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="21dp"/>
</RelativeLayout>