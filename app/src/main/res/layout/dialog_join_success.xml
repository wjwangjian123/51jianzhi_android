<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="263dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparency"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/dialog_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="21dp"
        android:paddingTop="@dimen/dimen_20"
        android:paddingBottom="21dp"
        android:background="@drawable/shape_bg_white10"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/dialog_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1E1E1E"
            android:textSize="21sp"
            android:text="报名成功"/>
        <TextView
            android:id="@+id/dialog_tv_tip"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_12"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/dialog_tv_copy"
            android:layout_width="220dp"
            android:layout_height="@dimen/dimen_30"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_12"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_resume_btn"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_5"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_iv_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/dimen_12"
        android:src="@drawable/icon_mer_cancel"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/dialog_tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="@dimen/font_15"
        android:textColor="@color/color_ffffff"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/dimen_12"
        android:visibility="gone"/>
</LinearLayout>