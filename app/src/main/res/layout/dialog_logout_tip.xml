<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="263dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30"
        android:background="@drawable/shape_tip_bg"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/logout_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:text="还剩下最后一步了，确认要退出登录吗?"
            android:textSize="13sp"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_EEEEEE"
            android:layout_marginTop="27dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/logout_tv_exit"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="退出"
                android:textSize="@dimen/font_15"
                android:textColor="@color/color_cccccc"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="47dp"
                android:background="@color/color_EEEEEE"/>
            <TextView
                android:id="@+id/logout_tv_goon"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="继续绑定"
                android:textSize="@dimen/font_15"
                android:textColor="@color/color_F3A922"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>