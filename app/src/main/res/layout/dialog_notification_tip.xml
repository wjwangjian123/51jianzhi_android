<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="263dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/transparency">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30"
        android:background="@drawable/shape_bg_white10"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/re_tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通知设置已关闭,请前往打开"
            android:textSize="@dimen/font_16"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
        <View
            android:id="@+id/re_view"
            android:layout_width="263dp"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_EEEEEE"
            android:layout_marginTop="@dimen/dimen_30"/>
        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="42dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/re_tv_cancel"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_cccccc"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="42dp"
                android:background="@color/color_EEEEEE"/>
            <TextView
                android:id="@+id/re_tv_set"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="去设置"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_text_theme"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>