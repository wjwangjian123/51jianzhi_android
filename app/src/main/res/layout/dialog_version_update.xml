<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@color/transparency">
    <ImageView
        android:id="@+id/dialog_version_img"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:src="@drawable/icon_main_version"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_version_bg_white"
        android:paddingTop="13dp"
        android:layout_below="@+id/dialog_version_img">
        <TextView
            android:id="@+id/dialog_version_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_16"
            android:layout_marginHorizontal="22dp"/>
        <TextView
            android:id="@+id/dialog_version_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_12"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginHorizontal="22dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_EEEEEE"
            android:layout_marginTop="@dimen/dimen_20"/>
        <LinearLayout
            android:id="@+id/dialog_version_bottom"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/dialog_tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="残忍拒绝"
                android:textColor="#D1D1D1"
                android:textSize="13sp"/>
            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="47dp"
                android:background="@color/color_EEEEEE"/>
            <TextView
                android:id="@+id/dialog_tv_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即升级"
                android:textColor="#FD9133"
                android:textSize="@dimen/font_14"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>