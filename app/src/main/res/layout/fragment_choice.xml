<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smartRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnableFooterFollowWhenLoadFinished="true"
    app:srlEnableScrollContentWhenLoaded="true">
    <com.scwang.smartrefresh.layout.header.ClassicsHeader xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.part.jianzhiyi.corecommon.ui.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:scrollbars="none"
        android:paddingTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="@dimen/dimen_20">
                <ImageView
                    android:id="@+id/iv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:src="@drawable/icon_join_tab"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_rank"
                    app:layout_constraintRight_toRightOf="@+id/tv_rank"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_rank"/>
                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="每日排行"
                    android:textColor="@color/color_292E3B"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_rank_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_2"
                    android:text="排行榜"
                    android:textColor="#979BAC"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_rank_more"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />
                <ImageView
                    android:id="@+id/iv_rank_more"
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="9dp"
                    android:src="@drawable/ic_grey_more"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/dimen_10"
                android:paddingLeft="15dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_edition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="@dimen/dimen_20">
                <ImageView
                    android:id="@+id/iv_edition"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:src="@drawable/icon_join_tab"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_edition"
                    app:layout_constraintRight_toRightOf="@+id/tv_edition"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_edition"/>
                <TextView
                    android:id="@+id/tv_edition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="商家推荐"
                    android:textColor="@color/color_292E3B"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_edition_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_2"
                    android:text="更多"
                    android:textColor="#979BAC"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_edition_more"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"/>
                <ImageView
                    android:id="@+id/iv_edition_more"
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="9dp"
                    android:src="@drawable/ic_grey_more"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/dimen_10"
                android:paddingLeft="15dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="@dimen/dimen_20">
                <ImageView
                    android:id="@+id/iv_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:src="@drawable/icon_join_tab"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_selected"
                    app:layout_constraintRight_toRightOf="@+id/tv_selected"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_selected"/>
                <TextView
                    android:id="@+id/tv_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="优质精选"
                    android:textColor="@color/color_292E3B"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_selected_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_2"
                    android:text="更多"
                    android:textColor="#979BAC"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_selected_more"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"/>
                <ImageView
                    android:id="@+id/iv_selected_more"
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="9dp"
                    android:src="@drawable/ic_grey_more"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
                android:id="@+id/lv_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:divider="@color/transparency"
                android:dividerHeight="@dimen/dimen_1"
                android:listSelector="@color/transparency"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="14dp"/>
            <RelativeLayout
                android:id="@+id/express_rl_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="@dimen/dimen_10"
                android:visibility="gone">
                <FrameLayout
                    android:id="@+id/express_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/iv_ad_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad_close"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>
    </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>