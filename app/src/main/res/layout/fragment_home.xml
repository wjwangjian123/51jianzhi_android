<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">
    <com.part.jianzhiyi.corecommon.ui.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="229dp"/>
            <LinearLayout
                android:id="@+id/linear_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="北京"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_16"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/iv_city_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:padding="@dimen/dimen_5"
                    android:src="@drawable/icon_home_city"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:id="@+id/home_linear_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_search_bg"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/icon_search" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="请输入兼职名称"
                        android:textColor="@color/color_cccccc"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/icon_category_bg"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:paddingVertical="17dp"
                android:layout_below="@+id/linear_search"
                android:layout_marginTop="@dimen/dimen_120"
                android:paddingHorizontal="@dimen/dimen_20">
                <LinearLayout
                    android:id="@+id/ll_salary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_salary"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/icon_salary"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/tv_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="边玩边赚"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_12"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_speed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_speed"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/icon_speed"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="极速可做"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_12"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_gold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_gold"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/icon_gold"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/tv_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="日进斗金"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_12"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_reliable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_reliable"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/icon_reliable"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/tv_reliable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="靠谱兼职"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_12"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_category"
                android:layout_marginTop="27dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_recommend"
                        android:layout_width="34dp"
                        android:layout_height="9dp"
                        android:src="@drawable/sy_tab"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="为你推荐"
                        android:textColor="@drawable/selector_text_color"
                        android:textSize="@dimen/font_14"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/cl_recommend">
                    <ImageView
                        android:id="@+id/iv_simple"
                        android:layout_width="34dp"
                        android:layout_height="9dp"
                        android:src="@drawable/sy_tab"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简单易做"
                        android:textColor="@drawable/selector_text_color"
                        android:textSize="@dimen/font_14"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="22dp"
                android:layout_below="@+id/linear_content">
                <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
                    android:id="@+id/list_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparency"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/transparency"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>
                <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
                    android:id="@+id/list_simple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparency"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/transparency"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="gone"/>
            </FrameLayout>
        </RelativeLayout>
    </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>
</LinearLayout>