<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">
    <LinearLayout
        android:id="@+id/home_rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="21dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_home_search_bg">
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="城市选择"
                    android:textColor="#555B68"
                    android:textSize="13sp"/>
                <ImageView
                    android:id="@+id/iv_city_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_3"
                    android:src="@drawable/icon_home_city"/>
                <View
                    android:layout_width="0.6dp"
                    android:layout_height="17dp"
                    android:background="#E3E4E6"
                    android:layout_marginLeft="@dimen/dimen_10"/>
                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dimen_12"
                    android:text="请输入兼职名称"
                    android:textColor="#B9BCC4"
                    android:textSize="11sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/home_iv_sign"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="19dp"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:layout_marginTop="14dp">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<!--        <com.part.jianzhiyi.corecommon.ui.ObservableScrollView-->
<!--            android:id="@+id/scrollview"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:scrollbars="none">-->
        <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                app:elevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">
                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_120"
                        android:layout_marginHorizontal="21dp"/>
                    <ImageView
                        android:id="@+id/home_iv_yin"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_marginHorizontal="21dp"
                        android:src="@drawable/icon_banner_bg"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/ll_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="21dp"
                        android:layout_marginTop="4dp">
                        <LinearLayout
                            android:id="@+id/ll_salary"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_salary"
                                android:layout_width="38dp"
                                android:layout_height="32dp"
                                android:src="@drawable/icon_salary"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/tv_salary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="短期日结"
                                android:textColor="@color/color_292E3B"
                                android:textSize="@dimen/font_10"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_speed"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_speed"
                                android:layout_width="38dp"
                                android:layout_height="32dp"
                                android:src="@drawable/icon_speed"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/tv_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="极速可做"
                                android:textColor="@color/color_292E3B"
                                android:textSize="@dimen/font_10"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_gold"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_gold"
                                android:layout_width="38dp"
                                android:layout_height="32dp"
                                android:src="@drawable/icon_gold"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/tv_gold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="日进斗金"
                                android:textColor="@color/color_292E3B"
                                android:textSize="@dimen/font_10"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_reliable"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_reliable"
                                android:layout_width="38dp"
                                android:layout_height="32dp"
                                android:src="@drawable/icon_reliable"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/tv_reliable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="靠谱兼职"
                                android:textColor="@color/color_292E3B"
                                android:textSize="@dimen/font_10"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_10"
                        android:background="@color/color_F7F8FA"
                        android:layout_marginTop="@dimen/dimen_20"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:layout_marginHorizontal="21dp">
                        <ImageView
                            android:id="@+id/iv_today"
                            android:layout_width="wrap_content"
                            android:layout_height="5dp"
                            android:src="@drawable/icon_home_tab"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_today"
                            app:layout_constraintLeft_toLeftOf="@+id/tv_today"
                            app:layout_constraintRight_toRightOf="@+id/tv_today"/>
                        <TextView
                            android:id="@+id/tv_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日必做兼职"
                            android:textColor="@color/color_292E3B"
                            android:textSize="@dimen/font_15"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="火热兼职，最新排名"
                            android:textSize="@dimen/font_10"
                            android:textColor="@color/color_717785"
                            app:layout_constraintLeft_toRightOf="@+id/tv_today"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="9dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">
                        <com.part.jianzhiyi.corecommon.ui.ListViewInScrollView
                            android:id="@+id/list_today"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="#E7ECF5"
                            android:dividerHeight="0.5dp"
                            android:listSelector="@color/transparency"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:layout_marginTop="1dp"
                            android:layout_marginHorizontal="21dp"/>
                    </androidx.core.widget.NestedScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_10"
                        android:background="@color/color_F7F8FA"
                        android:layout_marginTop="8dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:layout_marginHorizontal="21dp">
                        <ImageView
                            android:id="@+id/iv_recommend"
                            android:layout_width="wrap_content"
                            android:layout_height="5dp"
                            android:src="@drawable/icon_join_tab"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_recommend"
                            app:layout_constraintLeft_toLeftOf="@+id/tv_recommend"
                            app:layout_constraintRight_toRightOf="@+id/tv_recommend"/>
                        <TextView
                            android:id="@+id/tv_recommend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="兼职推荐"
                            android:textColor="@color/color_292E3B"
                            android:textSize="@dimen/font_15"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大家都在做的赚钱兼职"
                            android:textSize="@dimen/font_10"
                            android:textColor="@color/color_717785"
                            app:layout_constraintLeft_toRightOf="@+id/tv_recommend"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="9dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="9dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E7ECF5"
                        android:layout_marginTop="@dimen/dimen_10"/>
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <com.part.jianzhiyi.modulemerchants.customview.MyViewpager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="21dp"
                        android:layout_marginBottom="26dp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
<!--        </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>-->
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>