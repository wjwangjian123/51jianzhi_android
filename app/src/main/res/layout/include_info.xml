<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_iv_location"
        android:layout_width="@dimen/dimen_10"
        android:layout_height="@dimen/dimen_10"
        android:src="@drawable/icon_dizhi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/item_tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_10"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dimen_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_iv_location"/>
    <ImageView
        android:id="@+id/item_iv_time"
        android:layout_width="@dimen/dimen_10"
        android:layout_height="9dp"
        android:src="@drawable/icon_shijian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dimen_10"
        app:layout_constraintLeft_toRightOf="@+id/item_tv_place"/>
    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_10"
        android:textColor="@color/color_999999"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_iv_time"
        android:layout_marginLeft="@dimen/dimen_3"/>
    <TextView
        android:id="@+id/item_tv_settlement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="6dp"
        android:paddingVertical="@dimen/dimen_2"
        android:textSize="@dimen/font_10"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_gravity="end"
        android:background="@drawable/shape_text_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>