<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_rl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="25dp"
    android:paddingRight="27dp"
    android:background="@drawable/icon_choice_bg_one">
    <TextView
        android:id="@+id/item_rank_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="29sp"
        android:textColor="@color/color_292E3B"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/item_rank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_15"
        android:textColor="@color/color_292E3B"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/item_rank_position"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="@dimen/dimen_24"/>
    <LinearLayout
        android:id="@+id/ll_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/item_rank_title"
        android:layout_below="@+id/item_rank_title"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_10"
            android:textColor="@color/color_A1A7B7"/>
        <View
            android:id="@+id/view_method"
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_10"
            android:background="@color/color_A1A7B7"
            android:layout_marginLeft="@dimen/dimen_3"/>
        <TextView
            android:id="@+id/item_tv_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_10"
            android:textColor="@color/color_A1A7B7"
            android:layout_marginLeft="@dimen/dimen_3"/>
        <View
            android:id="@+id/view_time"
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_10"
            android:background="@color/color_A1A7B7"
            android:layout_marginLeft="@dimen/dimen_3"/>
        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_10"
            android:textColor="@color/color_A1A7B7"
            android:layout_marginLeft="@dimen/dimen_3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:layout_below="@+id/item_rank_title"
        android:layout_marginTop="@dimen/dimen_5">
        <TextView
            android:id="@+id/item_rank_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_18"
            android:textColor="@color/color_text_theme"
            android:textStyle="bold"
            android:gravity="bottom"/>
        <TextView
            android:id="@+id/item_rank_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_text_theme"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/dimen_2"/>
    </LinearLayout>
</RelativeLayout>