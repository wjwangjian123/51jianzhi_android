<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/dimen_2"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10">

            <ImageView
                android:id="@+id/iv_home_vaction_avatar"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_home_vaction_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:textSize="@dimen/font_16"
                android:gravity="left"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_home_vaction_avatar"
                app:layout_constraintTop_toTopOf="@+id/iv_home_vaction_avatar" />
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@+id/iv_home_vaction_avatar"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_vaction_title"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5">
                <ImageView
                    android:id="@+id/item_iv_location"
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_10"
                    android:src="@drawable/icon_dizhi" />
                <TextView
                    android:id="@+id/item_tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_10"
                    android:textColor="@color/color_999999"
                    android:layout_marginLeft="@dimen/dimen_3"/>
                <ImageView
                    android:id="@+id/item_iv_time"
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="9dp"
                    android:src="@drawable/icon_shijian"
                    android:layout_marginLeft="@dimen/dimen_10"/>
                <TextView
                    android:id="@+id/item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_10"
                    android:textColor="@color/color_999999"
                    android:layout_marginLeft="@dimen/dimen_3"/>
                <TextView
                    android:id="@+id/item_tv_settlement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="@dimen/dimen_2"
                    android:textSize="@dimen/font_10"
                    android:textColor="@color/color_999999"
                    android:background="@drawable/shape_text_grey"
                    android:layout_marginLeft="@dimen/dimen_10"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_home_vaction_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_15"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/iv_home_vaction_avatar"
                app:layout_constraintTop_toBottomOf="@+id/linear" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_resume_btn"
                android:text="立即报名"
                android:paddingLeft="@dimen/dimen_12"
                android:paddingRight="@dimen/dimen_12"
                android:paddingTop="6dp"
                android:textStyle="bold"
                android:paddingBottom="6dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_10"
                app:layout_constraintBottom_toBottomOf="@+id/iv_home_vaction_avatar"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
