<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:paddingTop="@dimen/dimen_10"
    android:paddingBottom="@dimen/dimen_12">
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_type_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dimen_20"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_292E3B"
            android:textSize="13sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/color_text_theme"
                android:textStyle="bold"
                android:textSize="@dimen/font_18" />
            <TextView
                android:id="@+id/tv_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/color_text_theme"
                android:textSize="@dimen/font_15" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_info"
        android:layout_marginTop="@dimen/dimen_5">
        <TextView
            android:id="@+id/item_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="@dimen/dimen_2"
            android:textSize="9sp"
            android:textColor="@color/color_717785"
            android:background="@drawable/shape_text_grey"/>
        <TextView
            android:id="@+id/item_tv_settlement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="@dimen/dimen_2"
            android:textSize="9sp"
            android:textColor="@color/color_717785"
            android:background="@drawable/shape_text_grey"
            android:layout_marginLeft="@dimen/dimen_8"/>
        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="@dimen/dimen_2"
            android:textSize="9sp"
            android:textColor="@color/color_717785"
            android:background="@drawable/shape_text_grey"
            android:layout_marginLeft="@dimen/dimen_8"/>
    </LinearLayout>
</RelativeLayout>