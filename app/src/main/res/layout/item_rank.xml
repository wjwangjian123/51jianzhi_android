<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:paddingTop="@dimen/dimen_15"
    android:paddingBottom="@dimen/dimen_15">
    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_24" />
    <TextView
        android:id="@+id/tv_type_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="@dimen/dimen_15"
        android:layout_toRightOf="@+id/tv_rank"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/font_15"
        android:textColor="@color/color_333333"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_5" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="ï¿¥"
            android:textColor="@color/color_F3AF3D"
            android:textStyle="bold"
            android:textSize="@dimen/font_8" />
        <TextView
            android:id="@+id/tv_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/color_F3AF3D"
            android:textStyle="bold"
            android:textSize="@dimen/font_16" />
        <TextView
            android:id="@+id/tv_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dimen_1"
            android:textColor="@color/color_F3AF3D"
            android:textSize="13sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_type_content"
        android:layout_toRightOf="@+id/tv_rank"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5">
        <ImageView
            android:id="@+id/item_iv_location"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_10"
            android:src="@drawable/icon_dizhi"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_10"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_iv_location"/>
        <ImageView
            android:id="@+id/item_iv_time"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="9dp"
            android:src="@drawable/icon_shijian"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_tv_place"/>
        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_10"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_iv_time"/>
        <TextView
            android:id="@+id/item_tv_settlement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="@dimen/dimen_2"
            android:textSize="@dimen/font_10"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="@drawable/shape_text_grey"/>
    </RelativeLayout>
</RelativeLayout>