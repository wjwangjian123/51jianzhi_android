<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/view_relative"
        android:layout_width="46dp"
        android:layout_height="46dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/view_iv_headpic"
            android:layout_width="46dp"
            android:layout_height="46dp"
            fresco:roundAsCircle="true"
            fresco:failureImage="@drawable/icon_pic1"/>
        <ImageView
            android:id="@+id/view_iv_red"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_10"
            android:src="@drawable/icon_small_red"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/view_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/view_relative"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_40">
        <TextView
            android:id="@+id/view_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_333333"
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:id="@+id/view_tv_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_12"
        android:textColor="@color/color_666666"
        android:layout_toRightOf="@+id/view_relative"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_below="@+id/view_linear"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/dimen_40"/>
    <TextView
        android:id="@+id/view_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_12"
        android:textColor="@color/color_666666"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/color_EEEEEE"
        android:layout_below="@+id/view_relative"
        android:layout_marginTop="11dp"/>
</RelativeLayout>