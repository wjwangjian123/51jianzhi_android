<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_66"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:paddingLeft="17dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/dimen_12">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_iv_icon"
            android:layout_width="41dp"
            android:layout_height="41dp"
            fresco:roundAsCircle="true"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/list_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/font_15"
                android:textColor="#2E4057"/>

            <TextView
                android:id="@+id/list_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="#8892A0"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dimen_5"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/list_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_16"
                android:textColor="#EA5260"/>

            <TextView
                android:id="@+id/list_tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_2"
                android:textSize="13sp"
                android:textColor="#EA5260"
                android:layout_toRightOf="@+id/list_tv_money"
                android:layout_alignBottom="@+id/list_tv_money"
                android:layout_marginLeft="@dimen/dimen_1"/>

            <TextView
                android:id="@+id/list_tv_surplus_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#9A9A9A"
                android:gravity="center"
                android:layout_below="@+id/list_tv_money"
                android:layout_marginTop="7dp"/>

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="#E7ECF5"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="16dp"/>
</LinearLayout>