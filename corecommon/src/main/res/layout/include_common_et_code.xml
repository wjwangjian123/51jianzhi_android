<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/login_linear_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_5C6272"
            android:text="+86"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"/>
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_gravity="center_vertical"
            android:background="@color/color_E1E3EC"/>
        <com.part.jianzhiyi.corecommon.ui.InputFilteEditText
            android:id="@+id/et_input_phone"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:background="@null"
            android:hint="请输入手机号"
            android:textSize="@dimen/font_15"
            android:textColorHint="@color/color_CACFD9"/>
    </LinearLayout>
    <View
        android:id="@+id/login_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_1"
        android:background="@color/color_E1E3EC"
        android:layout_below="@+id/login_linear_phone"/>
    <LinearLayout
        android:id="@+id/login_linear_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:layout_below="@id/login_view1"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="horizontal">

        <com.part.jianzhiyi.corecommon.ui.InputFilteEditText
            android:id="@+id/et_input_code"
            style="@style/MyEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:hint="请输入验证码"
            android:textSize="@dimen/font_15"
            android:textColorHint="@color/color_CACFD9"
            android:maxLength="6"
            android:inputType="number"
            android:minEms="6"
            android:paddingRight="@dimen/dimen_10"/>

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingTop="7dp"
            android:paddingRight="17dp"
            android:paddingBottom="7dp"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/color_00A47C"
            android:textSize="@dimen/font_12"
            android:background="@drawable/shape_code_bg"/>
    </LinearLayout>
    <View
        android:id="@+id/login_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_1"
        android:background="@color/color_E1E3EC"
        android:layout_below="@+id/login_linear_code"/>
</RelativeLayout>