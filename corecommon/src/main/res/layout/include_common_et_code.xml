<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">
    <com.part.jianzhiyi.corecommon.ui.InputFilteEditText
        android:id="@+id/et_input_phone"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/shape_login_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/font_14"
        android:paddingLeft="@dimen/dimen_24"
        android:paddingRight="23dp"/>
    <LinearLayout
        android:id="@+id/login_linear_code"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_login_et_bg"
        android:paddingLeft="@dimen/dimen_24"
        android:paddingRight="23dp">
        <com.part.jianzhiyi.corecommon.ui.InputFilteEditText
            android:id="@+id/et_input_code"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:hint="请输入验证码"
            android:textSize="@dimen/font_14"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_333333"
            android:inputType="number"
            android:maxLength="6"
            android:minEms="6"
            android:paddingRight="@dimen/dimen_10"/>
        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="@dimen/font_12"
            android:textColor="#FF7E37"
            android:layout_marginLeft="@dimen/dimen_10"/>
    </LinearLayout>
</LinearLayout>