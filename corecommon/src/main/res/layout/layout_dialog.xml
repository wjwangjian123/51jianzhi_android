<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/bg_round_dialog"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_tip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:paddingTop="25dp"/>

        <TextView
            android:id="@+id/dialog_tip_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/color_333333"
            android:text="多大啊"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/dialog_tip_oneline_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dialog_tip_oneline_center_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_4A4A4A"
            android:textSize="@dimen/font_14"
            android:padding="20dp"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:id="@+id/dialog_tip_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dialog_tip_message"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/dialog_tip_know"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/dialog_tip_line"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/color_text_theme"
        android:text="我知道了" />

    <LinearLayout
        android:id="@+id/dialog_two_button"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/dialog_tip_line"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_tip_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="取消"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:padding="10dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_dddddd"/>

        <TextView
            android:id="@+id/dialog_tip_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="确定"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/color_text_theme"
            android:gravity="center"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>