<?xml version="1.0" encoding="utf-8"?>
<resources>
        <attr name="preferredMaxOffsetItemCount" format="integer" />
        <attr name="itemHeight" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="isCyclic" format="boolean" />
        <attr name="autoFitSize" format="boolean" />
        <attr name="curved" format="boolean" />

        <declare-styleable name="PickerView">
            <attr name="preferredMaxOffsetItemCount" />
            <attr name="itemHeight" />
            <attr name="defaultTextSize"/>
            <attr name="textSize" />
            <attr name="textColor" />
            <attr name="isCyclic" />
            <attr name="autoFitSize" />
            <attr name="curved" />
            <attr name="leftRightPadding"/>
        </declare-styleable>

        <declare-styleable name="PickerViewGroup">
            <attr name="preferredMaxOffsetItemCount" />
            <attr name="itemHeight" />
            <attr name="textSize" />
            <attr name="textColor" />
            <attr name="autoFitSize" />
            <attr name="curved" />

        </declare-styleable>

        <declare-styleable name="DateTimePickerView">
            <attr name="type" format="enum">
                <enum name="dateTime" value="0"/>
                <enum name="dateHourMinute" value="1"/>
                <enum name="yearMonthDayHourMinute" value="2"/>
                <enum name="yearMonthDay" value="3"/>
            </attr>
            <attr name="minutesInterval" format="enum">
                <enum name="one" value="1"/>
                <enum name="five" value="5"/>
                <enum name="ten" value="10"/>
                <enum name="fifteen" value="15"/>
                <enum name="twenty" value="20"/>
                <enum name="thirty" value="30"/>
            </attr>
        </declare-styleable>

        <declare-styleable name="DivisionPickerView">
            <attr name="divisionPickerType" format="enum">
                <enum name="all" value="0"/>
                <enum name="provinceAndCity" value="1"/>
            </attr>
        </declare-styleable>

    <declare-styleable name="StarRatingBar">
        <!-- 默认的星星图片 优先级高于绘制的星星 -->
        <attr name="defaultStar" format="reference" />
        <!-- 选中的星星图片 -->
        <attr name="star" format="reference" />
        <!-- 默认的星星颜色 -->
        <attr name="defaultStarColor" format="color" />
        <!-- 选中的星星颜色 -->
        <attr name="starColor" format="color" />
        <!-- 星星的个数 -->
        <attr name="starNum" format="integer" />
        <!-- 可选的星星的步长 如：0.5表示可选半颗星 -->
        <attr name="starStep" format="float" />
        <!-- 星星之间的间距 -->
        <attr name="starGap" format="dimension" />
        <!-- 星星的大小 -->
        <attr name="starSize" format="dimension" />
        <!-- 选中星星的部分 小于等于starNum -->
        <attr name="rating" format="float" />
        <!-- 星星是否响应事件 默认为true 表示仅作为展示 -->
        <attr name="isIndicator" format="boolean" />
    </declare-styleable>

    <!-- 自定义星星属性 -->
    <declare-styleable name="star">
        <attr format="integer" name="starsNum"/>
        <attr format="dimension" name="starWidth"/>
        <attr format="dimension" name="starHeight"/>
        <attr format="dimension" name="starDistance"/>
        <attr format="reference" name="starBackground"/>
        <attr format="reference" name="starDrawBackground"/>
        <attr format="boolean" name="starClickable"/>

    </declare-styleable>
    </resources>