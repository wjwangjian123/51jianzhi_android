<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ToolBar透明style-->
    <style name="TransperantToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!--否则会有黑色框框-->
    <style name="CircularDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--输入框-->
    <!--输入框-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <!--<item name="android:paddingBottom">@dimen/dimen_12</item>-->
        <!--<item name="android:paddingTop">@dimen/dimen_12</item>-->
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textColorHint">@color/color_c6c6c6</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <!--自定义出生日期选择style-->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_defaults_view_pickerview_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/top_defaults_view_pickerview_slide_out_to_bottom</item>
    </style>
    <style name="BottomFullWidthDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--网络加载的转菊花的样式-->
    <style name="LoadingDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>       <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@color/transparency</item> <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item>      <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item>    <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>       <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null
        </item>  <!-- 也是个drawable，定义contentoverlay的背景 -->
        <item name="android:backgroundDimEnabled">false</item>  <!-- 背景是否模糊显示 -->
    </style>
</resources>