<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context=".mvp.ui.activity.MerAuthSelectActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/color_F7F8FA"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:paddingLeft="21dp"
        android:paddingRight="@dimen/dimen_20">
        <ImageView
            android:id="@+id/iv_auth_face"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_mer_auth_face"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人脸识别认证"
            android:textSize="@dimen/font_16"
            android:textColor="#494C53"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_auth_face"
            android:layout_marginLeft="19dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_mer_grey_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/color_F7F8FA"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:paddingLeft="21dp"
        android:paddingRight="@dimen/dimen_20">
        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_mer_auth_weixin"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付认证"
            android:textSize="@dimen/font_16"
            android:textColor="#494C53"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_weixin"
            android:layout_marginLeft="19dp"/>
        <ImageView
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_15"
            android:src="@drawable/icon_mer_auth_tip"
            android:layout_toRightOf="@+id/tv_weixin"
            android:layout_alignTop="@+id/tv_weixin"
            android:layout_marginLeft="11dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_mer_grey_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/color_F7F8FA"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付认证说明"
        android:textSize="13sp"
        android:textColor="#33363C"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="51兼职认证不收取任何费用，但您要先支付一笔0.1-1元的\n费用，认证实时通过，费用即时退还。若认证失败费用也会\n即时退还。"
        android:textSize="@dimen/font_12"
        android:textColor="@color/color_A1A7B7"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:lineSpacingExtra="@dimen/dimen_3"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>