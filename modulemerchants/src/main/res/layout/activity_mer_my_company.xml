<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context=".mvp.ui.activity.MerMyCompanyActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_44"
            android:layout_centerVertical="true"
            android:paddingHorizontal="19dp"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_arrow_return"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的公司"
            android:textColor="@color/color_051b28"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_44"
            android:paddingHorizontal="@dimen/dimen_5"
            android:text="咨询客服"
            android:textSize="@dimen/font_12"
            android:textColor="#FE954A"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"/>
    </RelativeLayout>
    <com.part.jianzhiyi.corecommon.ui.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@color/color_ffffff"
        android:overScrollMode="never"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_ffffff">
            <RelativeLayout
                android:id="@+id/rl_bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8FB">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="23dp"
                    android:paddingBottom="26dp"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:orientation="vertical"
                    android:background="@drawable/shape_white_bg7">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未绑定"
                        android:textSize="17sp"
                        android:textColor="#494C53"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="56dp"/>
                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请您尽快绑定公司，绑定后可享受更多特权"
                        android:textSize="@dimen/font_12"
                        android:textColor="#9A9FB7"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_12"/>
                </LinearLayout>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_img"
                    android:layout_width="@dimen/dimen_52"
                    android:layout_height="@dimen/dimen_52"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    fresco:roundAsCircle="true"
                    fresco:failureImage="@drawable/icon_ch_enterprises"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我将获得"
                android:textSize="@dimen/font_15"
                android:textColor="#6C7684"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="@dimen/dimen_20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:id="@+id/ll_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="@dimen/dimen_60"
                        android:src="@drawable/icon_mer_con_homepage"/>
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="公司品牌主页(即将上线)"
                        android:textSize="@dimen/font_12"
                        android:textColor="#494C53"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_12"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dimen_10">
                    <ImageView
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="@dimen/dimen_60"
                        android:src="@drawable/icon_mer_con_position"/>
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="职位更具权威性"
                        android:textSize="@dimen/font_12"
                        android:textColor="#494C53"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_12"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:id="@+id/ll_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="@dimen/dimen_60"
                        android:src="@drawable/icon_mer_con_publish"/>
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="可免费发布3个线下职位"
                        android:textSize="@dimen/font_12"
                        android:textColor="#494C53"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_12"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dimen_10">
                    <ImageView
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="@dimen/dimen_60"
                        android:src="@drawable/icon_mer_con_more"/>
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="更多特权即将上线"
                        android:textSize="@dimen/font_12"
                        android:textColor="#494C53"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_12"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingBottom="@dimen/dimen_40">
                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="下一步"
                    android:textSize="17sp"
                    android:textColor="@color/color_ffffff"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:background="@drawable/icon_mer_btn_bg"/>
            </LinearLayout>
        </LinearLayout>
    </com.part.jianzhiyi.corecommon.ui.ObservableScrollView>
</LinearLayout>