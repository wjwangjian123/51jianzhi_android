<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smartRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparency"
    tools:context=".mvp.ui.activity.MerMyWalletActivity">
    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginHorizontal="27dp"
                android:paddingTop="@dimen/dimen_15"
                android:paddingLeft="22dp"
                android:paddingBottom="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_20"
                android:background="@drawable/icon_mer_wallet_bg">
                <TextView
                    android:id="@+id/wallet_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已缴纳保证金(元)"
                    android:textSize="9sp"
                    android:textColor="#EFF0FF"/>
                <TextView
                    android:id="@+id/wallet_tv_bond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:textColor="@color/color_ffffff"
                    android:textStyle="bold"
                    android:layout_below="@+id/wallet_text1"
                    android:layout_marginTop="7dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/wallet_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用余额(元)"
                    android:textSize="@dimen/font_14"
                    android:textColor="#EFF0FF"
                    android:layout_below="@+id/wallet_tv_bond"
                    android:layout_marginTop="@dimen/dimen_20"/>
                <TextView
                    android:id="@+id/wallet_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="27sp"
                    android:textColor="@color/color_ffffff"
                    android:textStyle="bold"
                    android:layout_below="@+id/wallet_text2"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/wallet_tv_recharge"
                    android:layout_width="71dp"
                    android:layout_height="28dp"
                    android:text="充值"
                    android:textSize="13sp"
                    android:textColor="#FD8F36"
                    android:gravity="center"
                    android:background="@drawable/shape_white_bg14"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/wallet_tv_money"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/icon_mer_wallet_yin"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="-2dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E7ECF5"
                android:layout_marginTop="@dimen/dimen_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/wallet_ll_consume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="17dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_consume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消费明细"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/view_wallet_text"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/iv_consume"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="2dp"
                        android:src="@drawable/icon_mer_home_tab"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wallet_ll_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="17dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="充值明细"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/view_wallet_text"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/iv_recharge"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="2dp"
                        android:src="@drawable/icon_mer_home_tab"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>
            <com.part.jianzhiyi.modulemerchants.customview.NoScrollViewPager
                android:id="@+id/wallet_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F4F4F7"/>
        </LinearLayout>
    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F4F7"/>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>