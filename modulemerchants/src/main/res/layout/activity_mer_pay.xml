<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".mvp.ui.activity.MerPayActivity"
    android:background="#F4F4F7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:background="@drawable/shape_white_bg7"
            android:paddingLeft="@dimen/dimen_18"
            android:paddingRight="@dimen/dimen_18"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入充值金额(元)"
                android:textSize="13sp"
                android:textColor="#344051"/>
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:text="￥"
                android:textSize="17sp"
                android:textColor="#344051"
                android:gravity="center"
                android:layout_below="@+id/tv_tip"
                android:layout_marginTop="@dimen/dimen_30"/>
            <com.part.jianzhiyi.corecommon.ui.InputFilteEditText
                android:id="@+id/et_money"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#344051"
                android:textColorHint="#E0E4EA"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/tv_text"
                android:layout_alignTop="@+id/tv_text"
                android:layout_marginLeft="@dimen/dimen_8"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E7ECF5"
                android:layout_below="@+id/et_money"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:textColor="#FD5E3A"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="支付宝充值"
            android:textColor="@color/color_ffffff"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:background="@drawable/icon_mer_btn_bg"/>
    </LinearLayout>
</ScrollView>