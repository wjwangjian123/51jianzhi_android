<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/color_ffffff"
    tools:context=".mvp.ui.activity.MerPositionInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善职位信息"
            android:textSize="23sp"
            android:textColor="#494C53"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/4"
            android:textSize="@dimen/font_20"
            android:textColor="#A2A8B5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="21dp"/>
        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/tv_content"
            android:background="@drawable/shape_bg_grey4"
            android:layout_marginTop="23dp"
            android:layout_marginHorizontal="@dimen/dimen_20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位标题"
                android:textSize="@dimen/font_16"
                android:textColor="#494C53"/>
            <com.part.jianzhiyi.corecommon.ui.InputFilteEditText
                android:id="@+id/et_title"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@color/transparency"
                android:hint="请输入标题"
                android:textColorHint="#A2A8B5"
                android:textColor="#494C53"
                android:textSize="@dimen/font_15"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawablePadding="@dimen/dimen_5"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作内容"
            android:textSize="@dimen/font_16"
            android:textColor="#494C53"
            android:layout_below="@+id/ll_title"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_20"/>
        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"
            android:textSize="13sp"
            android:textColor="#494C53"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_alignTop="@+id/tv_work"
            android:layout_marginTop="@dimen/dimen_1"/>
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:layout_below="@+id/tv_work"
            android:background="@drawable/shape_bg_grey4"
            android:layout_marginTop="11dp"
            android:layout_marginHorizontal="@dimen/dimen_20">
            <com.part.jianzhiyi.modulemerchants.customview.RichEditor
                android:id="@+id/re_main_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/ll_main_color"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#f2f1f6"
                android:visibility="gone">

                <com.part.jianzhiyi.modulemerchants.customview.ColorPickerView
                    android:id="@+id/cpv_main_color"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:background="#f2f1f6"
                    app:indicatorColor="#fff"
                    app:indicatorEnable="true"
                    app:orientation="horizontal" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f2f1f6">

                <HorizontalScrollView
                    style="@style/EditorIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_main_preview"
                    android:layout_toStartOf="@+id/tv_main_preview"
                    android:scrollbars="none"
                    android:layout_marginHorizontal="@dimen/dimen_1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/button_bold"
                            style="@style/EditorIcon"
                            android:src="@mipmap/bold"
                            android:layout_marginLeft="@dimen/dimen_1"/>

                        <TextView
                            android:id="@+id/button_text_color"
                            style="@style/EditorIcon"
                            android:layout_width="32dp"
                            android:layout_height="20dp"
                            android:background="@color/colorPrimary" />

                        <ImageView
                            android:id="@+id/button_list_ol"
                            style="@style/EditorIcon"
                            android:src="@mipmap/list_ol" />

                        <ImageView
                            android:id="@+id/button_list_ul"
                            style="@style/EditorIcon"
                            android:src="@mipmap/list_ul" />

                        <ImageView
                            android:id="@+id/button_underline"
                            style="@style/EditorIcon"
                            android:src="@mipmap/underline" />

                        <ImageView
                            android:id="@+id/button_italic"
                            style="@style/EditorIcon"
                            android:src="@mipmap/lean" />

                        <ImageView
                            android:id="@+id/button_align_left"
                            style="@style/EditorIcon"
                            android:src="@mipmap/align_left" />

                        <ImageView
                            android:id="@+id/button_align_center"
                            style="@style/EditorIcon"
                            android:src="@mipmap/align_center" />

                        <ImageView
                            android:id="@+id/button_align_right"
                            style="@style/EditorIcon"
                            android:src="@mipmap/align_right" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_main_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:text="预览"
                    android:textColor="#dd3333"
                    android:textSize="18sp" />
            </RelativeLayout>
<!--            <com.part.jianzhiyi.corecommon.ui.InputFilteEditText-->
<!--                android:id="@+id/et_content"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@color/transparency"-->
<!--                android:hint="1、请明确兼职生的工作内容，需要如何做，对兼职生的要求是什么。\n2、请明确薪资组成。"-->
<!--                android:textColorHint="#A2A8B5"-->
<!--                android:textColor="#494C53"-->
<!--                android:gravity="top"-->
<!--                android:textSize="@dimen/font_15"-->
<!--                android:layout_marginLeft="15dp"-->
<!--                android:lineSpacingExtra="@dimen/dimen_3"/>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/ll_content"
            android:background="@drawable/shape_bg_grey4"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginHorizontal="@dimen/dimen_20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招聘人数"
                android:textSize="@dimen/font_16"
                android:textColor="#494C53"/>
            <com.part.jianzhiyi.corecommon.ui.InputFilteEditText
                android:id="@+id/et_num"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@color/transparency"
                android:hint="请输入招聘人数"
                android:textColorHint="#A2A8B5"
                android:textColor="#494C53"
                android:textSize="@dimen/font_15"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawablePadding="@dimen/dimen_5"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingBottom="@dimen/dimen_40"
            android:layout_below="@+id/ll_num"
            android:layout_marginTop="@dimen/dimen_10">
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="下一步"
                android:textSize="17sp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:background="@drawable/icon_mer_btn_bg"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>