<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="287dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparency"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">
    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_10"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_white_bg9">
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textColor="#3D4354"/>
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_717785"
            android:layout_marginTop="19dp"
            android:layout_marginHorizontal="@dimen/dimen_30"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_auth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginHorizontal="23dp"
            android:gravity="center"
            android:background="@drawable/icon_mer_btn_bg"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/icon_mer_cancel"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20"/>
</LinearLayout>