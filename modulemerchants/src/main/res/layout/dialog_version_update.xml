<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@color/transparency">
    <ImageView
        android:id="@+id/dialog_version_img"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:src="@drawable/icon_main_version"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_version_bg_white"
        android:paddingTop="16dp"
        android:layout_below="@+id/dialog_version_img">
        <TextView
            android:id="@+id/dialog_version_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#343129"
            android:textSize="@dimen/font_20"
            android:layout_marginHorizontal="22dp"/>
        <TextView
            android:id="@+id/dialog_version_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#343129"
            android:textSize="@dimen/font_12"
            android:lineSpacingExtra="9dp"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginHorizontal="22dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7ECF5"
            android:layout_marginTop="34dp"/>
        <LinearLayout
            android:id="@+id/dialog_version_bottom"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/dialog_tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="残忍拒绝"
                android:textColor="#D1D1D1"
                android:textSize="16sp"/>
            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="47dp"
                android:background="#E7ECF5"/>
            <TextView
                android:id="@+id/dialog_tv_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即升级"
                android:textColor="#FD9133"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>