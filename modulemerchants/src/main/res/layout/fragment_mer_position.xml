<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">
        <ImageView
            android:id="@+id/iv_text"
            android:layout_width="91dp"
            android:layout_height="23dp"
            android:src="@drawable/icon_mer_home_text"
            android:layout_marginLeft="21dp"/>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/smartRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/transparency">
    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_ffffff">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginHorizontal="21dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_30">
                <LinearLayout
                    android:id="@+id/ll_to_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_to_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待发布"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/color_292E3B"/>
                    <ImageView
                        android:id="@+id/iv_to_publish"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="3dp"
                        android:src="@drawable/icon_mer_home_tab"
                        android:layout_marginTop="@dimen/dimen_8"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_published"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_published"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已发布"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/color_292E3B"/>
                    <ImageView
                        android:id="@+id/iv_published"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="3dp"
                        android:src="@drawable/icon_mer_home_tab"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改中"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/color_292E3B"/>
                    <ImageView
                        android:id="@+id/iv_update"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="3dp"
                        android:src="@drawable/icon_mer_home_tab"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E7ECF5"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F7F8FA"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_F7F8FA"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>