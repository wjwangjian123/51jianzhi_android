<?xml version="1.0" encoding="utf-8"?>
<com.part.jianzhiyi.corecommon.ui.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_F7F8FA">
        <RelativeLayout
            android:id="@+id/rl_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/icon_mer_date_bg">
            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="#8792A0"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_zhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="è‡³"
                android:textSize="@dimen/font_12"
                android:textColor="#8792A0"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_start_time"
                android:layout_marginLeft="@dimen/dimen_10"/>
            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="#8792A0"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_zhi"
                android:layout_marginLeft="@dimen/dimen_10"/>
            <ImageView
                android:id="@+id/iv_date"
                android:layout_width="@dimen/dimen_18"
                android:layout_height="@dimen/dimen_18"
                android:src="@drawable/icon_mer_riqi"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/rl_date"/>
        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@drawable/icon_mer_empty"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</com.part.jianzhiyi.corecommon.ui.ObservableScrollView>